<header class="top">
  <h1>Dashboard</h1>
  <form method="post" action="/logout"><button>Logout</button></form>
</header>
<p>Welcome <b><%= username %></b> (<%= role %>)</p>
<ul class="grid">
  <% sections.forEach(s => { %>
    <li><a class="tile" href="/section/<%= s %>"><%= s %></a></li>
  <% }) %>
  <% if (role === 'admin') { %>
    <li><a class="tile admin" href="/admin">Admin Panel</a></li>
  <% } %>
</ul>
